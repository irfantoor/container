{
    "name": "irfantoor/container",
    "description": "Irfan's Container: An abstraction for many types of containers with a single API.",
    "keywords": [
        "container", "abstraction", "case-insensitive", "array", "file", "config"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Irfan TOOR",
            "email": "email@irfantoor.com"
        }
    ],
    "require": {
        "php": ">=7.0",
        "psr/container": "^1.0",
        "irfantoor/collection": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.4",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "provide": {
        "psr/container-implementation": "1.0.0"
    },
    "autoload": {
        "classmap": [
            "src/"
        ],
        "psr-4": {
            "IrfanTOOR\\": "src"
        }
    },
    "scripts": {
        "test": [
            "@phpunit",
            "@phpcs"
        ],
        "phpunit": "php vendor/bin/phpunit tests",
        "phpcs": "php vendor/bin/phpcs src"
    }
}
